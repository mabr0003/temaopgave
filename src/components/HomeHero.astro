---
import HeroCard from "./HeroCard.astro";
---

<section>
  <div>
    <div>
      <h1>Adam Buschemia Business Consultant</h1>
      <p>Get help from Alex Moore, a professional business coach with advanced experience on growth and business scaling.</p>
      <button>Book a meeting</button>
    </div>
  </div>
  <img src="/src/assets/images/sarah.jpg" alt="" />
  <div class="cards">
    <HeroCard header="Finance & Restructuring" button="Our Services" />
    <HeroCard header="Finance & Restructuring" button="Our Services" />
    <HeroCard header="Finance & Restructuring" button="Our Services" />
  </div>
</section>

<style>
  @layer components {
    section {
      grid-column: full;
      display: grid;
      grid-template-columns: [full-start] 1fr [content] minmax(0, 600px) minmax(0, 600px) 1fr [full-end];
      grid-template-rows: 1fr auto auto;
      max-height: 90vh;
      overflow: hidden;

      div {
        grid-column: 1 / 3;
        grid-row: 1 / -2;
        display: grid;
        grid-template-columns: subgrid;
        background: var(--primary-03);
        color: var(--secondary-02);

        > div {
          grid-column: content;
          align-self: start;
        }

        button {
          background: var(--secondary-02);
          border-radius: 40px;
          padding: 0.25rem 1rem;
          color: var(--primary-03);
          justify-self: start;
        }
      }

      img {
        grid-column: 3 / -1;
        grid-row: 1 / -2;
        height: 100%;
        object-fit: cover;
      }

      .cards {
        grid-column: 2 / -2;
        grid-row: 2 / 4;
        display: flex;
        gap: 20px;
        background: none;
      }
    }
  }
</style>
